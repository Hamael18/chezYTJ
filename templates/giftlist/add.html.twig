{% extends 'layouts/base.html.twig' %}

{% block title 'Ajouter un cadeau à une liste' %}

{% block body %}
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="bg-white rounded shadow collection">
                <div class="p-3">
                    <h1 class="text-center text-primary">
                        Ajouter un cadeau à la liste de {{ user.firstName }}
                    </h1>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="form-inline">
                        <input type="submit" value="{{ submitButtonText ?? 'Ajouter le cadeau' }}"
                               class="btn btn-primary mx-auto" formnovalidate>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}