{% extends 'layouts/base.html.twig' %}

{% block title %}Liste des auteurs enregistrés{% endblock %}

{% block body %}
    {% set authorsNumber = authors | length %}

    <h1 class="text-center text-muted mb-6">
        Les auteurs enregistrés
        <a href="{{ path('app_authors_create') }}" class="text-primary" data-toggle="tooltip" data-placement="top" title="Ajouter un.e auteur.trice">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-bookmark-plus-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M4 0a2 2 0 0 0-2 2v13.5a.5.5 0 0 0 .74.439L8 13.069l5.26 2.87A.5.5 0 0 0 14 15.5V2a2 2 0 0 0-2-2H4zm4.5 4.5a.5.5 0 0 0-1 0V6H6a.5.5 0 0 0 0 1h1.5v1.5a.5.5 0 0 0 1 0V7H10a.5.5 0 0 0 0-1H8.5V4.5z"/>
            </svg></a>
    </h1>

    {% if authorsNumber > 0 %}

        <div class="row mt-6 mb-5 bg-white shadow rounded">
            {% for row in authors|batch(authorsNumber/3) %}
                <div class="col-xl-4 col-md-12">
                    <article>
                        {% for author in row %}
                            <h2 class="h5 px-3 pt-3"><a href="{{ path('app_authors_show', {'id':author.id}) }}"
                                                        class="text-muted text-decoration-none text-secondary"> {{ author.fullname }}</a>
                            </h2>
                        {% endfor %}
                    </article>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-center mt-5 h1"> No author yet. <a href="{{ path('app_authors_create') }}">Be the first!</a></p>
    {% endif %}

{% endblock %}
