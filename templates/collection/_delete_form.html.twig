<form method="post" action="{{ path('app_collection_delete', {'id': collection.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('collection_deletion_' ~ collection.id) }}">
    <button class="btn">Delete</button>
</form>
